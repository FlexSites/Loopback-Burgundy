{
  "name": "Event",
  "plural": "events",
  "base": "PersistedModel",
  "idInjection": true,
  "properties": {
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "default": "general"
    },
    "enabled": {
      "type": "date"
    },
    "dayofshow": {
      "type": "number",
      "default": 0
    },
    "description": {
      "type": "string"
    },
    "facebook": {
      "type": "string"
    },
    "link": {
      "type": "string"
    },
    "video": {
      "type": "string"
    },
    "pricingTiers": [
      {
        "date": {
          "type": "date"
        },
        "section": {
          "type": "objectId",
          "ref": "Section"
        },
        "price": {
          "type": "number",
          "required": true
        }
      }
    ]
  },
  "validations": [],
  "relations": {
    "site": {
      "type": "belongsTo",
      "model": "Site"
    },
    "entertainer": {
      "type": "hasMany",
      "model": "Entertainer"
    },
    "showtime": {
      "type": "hasMany",
      "model": "Showtime"
    },
    "venue": {
      "type": "belongsTo",
      "model": "Venue"
    },
    "medium":{
      "type": "hasMany",
      "model": "Medium"
    }
  },
  "acls": [],
  "methods": []
}
